@{
	Layout = null;
}


<!DOCTYPE html>

<html lang="tr"
	  class="light-style layout-menu-fixed"
	  dir="ltr"
	  data-theme="theme-default"
	  data-assets-path="../assets/"
	  data-template="vertical-menu-template-free">
<!-- Head start -->
@await Html.PartialAsync("~/Areas/Admin/Views/_LayoutPartial/_HeadPartial.cshtml")
<!-- Head end -->
<body>

	<!-- Layout wrapper -->
	<div class="layout-wrapper layout-content-navbar">
		<div class="layout-container">
			<!-- Menu -->
			@await Html.PartialAsync("~/Areas/Admin/Views/_LayoutPartial/layout-menu.cshtml")

			<!-- / Menu -->
			<!-- Layout container -->
			<div class="layout-page">
				<!-- Navbar -->
				@await Html.PartialAsync("~/Areas/Admin/Views/_LayoutPartial/_NavbarPartial.cshtml")

				<!-- / Navbar -->
				<!-- Content wrapper -->
				<div class="content-wrapper">
					<div class="container-xxl flex-grow-1 container-p-y">
						<!-- Content -->
						@RenderBody()
					</div>
					<!-- / Content -->
				</div>
				<!-- Footer -->
				@await Html.PartialAsync("~/Areas/Admin/Views/_LayoutPartial/_FooterPartial.cshtml")
				<!-- / Footer -->

				<div class="content-backdrop fade"></div>
			</div>
			<!-- Content wrapper -->
		</div>
		<!-- / Layout page -->
	</div>

	<!-- Overlay -->
	<div class="layout-overlay layout-menu-toggle"></div>
	</div>
	<!-- / Layout wrapper -->
	@await Html.PartialAsync("~/Areas/Admin/Views/_LayoutPartial/_ScriptPartial.cshtml")
</body>
</html>
