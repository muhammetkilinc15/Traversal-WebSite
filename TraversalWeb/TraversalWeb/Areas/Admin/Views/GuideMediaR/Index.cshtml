@model List<GetAllGuideQueryResult>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}


<h1>CQRRS  MediatR Rehber Listesi </h1>
<br />
<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Rehber adı</th>
		<th>Açıklama</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<td>@count</td>
			<td>@item.Name</td>
			<td>@item.Description</td>
			<td><a href="/Admin/GuideMediaR/RemoveGuide/@item.GuideID" class="btn btn-outline-danger">Sil</a></td>
			<td><a href="/Admin/GuideMediaR/GetGuides/@item.GuideID" class="btn btn-outline-dark">Güncelle</a></td>
		</tr>
	}
</table>

<a href="/Admin/GuideMediaR/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Ekle</a>