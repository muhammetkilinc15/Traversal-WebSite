@model GetDestinationByIQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Lokasyon Düzenleme Sayfası</h1>

<form method="post">
    <div class="form-group mt-1">
        <label>Şehir</label>
        <input type="text" asp-for="City" value="@Model.City" class="form-control"/>
    </div>

    <div class="form-group mt-1">
        <label>Gün Gece</label>
        <input type="text" asp-for="DayNight" value="@Model.DayNight" class="form-control" />
    </div>

    <div class="form-group mt-1">
        <label>Fiyat</label>
        <input type="text" asp-for="Price" value="@Model.Price" class="form-control" />
    </div>
    <button class="mt-1 btn btn-outline-success">Lokasyon Güncelle</button>
</form>
