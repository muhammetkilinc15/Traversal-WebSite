@model Guide
@{
	ViewData["Title"] = "AddGuide";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Oluşturma Sayfası</h1>

<div class="row">
	<div class="col-xl">
		<div class="card mb-4">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="mb-0">Basic Layout</h5>
				<small class="text-muted float-end">Default label</small>
			</div>
			<div class="card-body">
				<form method="post" enctype="multipart/form-data">
					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Adı Soyadı</label>
						<input type="text" asp-for="@Model.Name" class="form-control" id="basic-default-fullname" placeholder="Adınızı" />
						@Html.ValidationMessageFor(x=>x.Name,"",new {@class="Text-danger"})
					</div>

					<div class="mb-3">
						<label>Görsel</label>
						<input type="file" asp-for="@Model.Image" class="form-control" id="basic-default-company" placeholder="Görsel" />
						@Html.ValidationMessageFor(x => x.Image, "", new { @class = "Text-danger" })
					</div>

					<div class="mb-3">
						<label>Instagram Url</label>
						<input type="text" asp-for="@Model.InstagramUrl" class="form-control" id="basic-default-company" placeholder="Instagram Adress" />
					</div>


					<div class="mb-3">
						<label>Twitter Url</label>
						<input type="text" asp-for="@Model.TwitterUrl" class="form-control" id="basic-default-company" placeholder="Twitter Adress" />
					</div>

					<div class="mb-3">
						<label class="form-label" for="basic-default-company">Açıklama</label>
						<textarea rows="5" cols="5" asp-for="@Model.Description" class="form-control" id="basic-default-company" placeholder="Açıklama"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Oluştur</button>
				</form>
			</div>
		</div>
	</div>
</div>
