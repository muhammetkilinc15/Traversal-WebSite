@model List<EntityLayer.Concreate.Destination>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>

<div class="table-responsive text-nowrap">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Şehir</th>
				<th>Fiyat</th>
				<th>Kapasite</th>
				<th>Sitede Gör</th>
				<th>Düzenle-Sil-Detaylar</th>
			</tr>
		</thead>
		<tbody class="table-border-bottom-0">
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.DestinationID</td>
					<td>@item.City</td>
					<td>@item.Price</td>
					<td>@item.Capacity</td>
					<td><a href="#" class="btn btn-outline-info">Sitede Gör</a></td>


					<td>
						<div class="dropdown">
							<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
								<i class="bx bx-dots-vertical-rounded"></i>
							</button>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="/Admin/Destination/UpdateDestination/@item.DestinationID"><i class="bx bx-edit-alt me-1"></i>Güncelle</a>
								<a class="dropdown-item" href="/Admin/Destination/DeleteDestination/@item.DestinationID"><i class="bx bx-trash me-1"></i> Sil</a>
								<a class="dropdown-item" href="/Destination/DestinationDetails/@item.DestinationID"><i class="bx bx-radar me-1"></i> Detaylar</a>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-md-12 col-lg-12">
		<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Yeni Rota Ekle</a>
	</div>
</div>


