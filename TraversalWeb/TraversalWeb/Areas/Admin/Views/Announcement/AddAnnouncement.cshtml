@model AnnouncementAddDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Ekleme</h1>

<form  method="post">
    <div class="form-group">
        <label>Duyuru Başlığı</label>
        <input type="text" asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label>Duyur İçeriği</label>
        <input type="text" asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"> </span>
    </div>
    <button class="btn btn-outline-primary" type="submit">Duyuruyu Oluştur</button>
</form>
