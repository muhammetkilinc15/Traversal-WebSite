@model MailRequest
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni mail Gönderme Sayfası</h1>

<div class="row">
	<div class="col-xl">
		<div class="card mb-4">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="mb-0">Basic Layout</h5>
				<small class="text-muted float-end">Default label</small>
			</div>
			<div class="card-body">
				<form method="post" enctype="multipart/form-data">

					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Alıcı mail Adresi</label>
						<input type="text" asp-for="@Model.RecieverMail" class="form-control" id="basic-default-fullname" placeholder="Adınızı" />
						@Html.ValidationMessageFor(x => x.RecieverMail, "", new { @class = "Text-danger" })
					</div>

					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Konu başlığı</label>
						<input type="text" asp-for="@Model.Subject" class="form-control" id="basic-default-fullname" placeholder="Konu Başlığı" />
						@Html.ValidationMessageFor(x => x.Subject, "", new { @class = "Text-danger" })
					</div>
					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Mesaj içeriği</label>
						<textarea type="text" rows="5" cols="5"    asp-for="@Model.Body" class="form-control" id="basic-default-fullname" placeholder="Mesajınız"></textarea>
						@Html.ValidationMessageFor(x => x.Body, "", new { @class = "Text-danger" })
					</div>

					<button type="submit" class="btn btn-primary">Mail Gönder</button>
				</form>
			</div>
		</div>
	</div>
</div>