@model AccountViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Unit Of Prim Transeferi Sayfası</h1>
<form method="post">
    <div class="form-group">
        <label>Gönderen</label>
        <input type="text" asp-for="SenderID" class="form-control" />
        <span asp-validation-for="SenderID" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label>Alıcı</label>
        <input type="text" asp-for="RecieverId" class="form-control" />
        <span asp-validation-for="RecieverId" class="text-danger"> </span>
    </div>

    <div class="form-group">
        <label>Miktar</label>
        <input type="text" asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"> </span>
    </div>
    <button class="btn btn-outline-primary" type="submit">Hesaba Aktar</button>
</form>
