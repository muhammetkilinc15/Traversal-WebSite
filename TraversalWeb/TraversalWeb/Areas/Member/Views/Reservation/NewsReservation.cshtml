@model Reservation
@{
	ViewData["Title"] = "NewsReservation";
	Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}
<head>
	<style>
		.popup{
			display: none;
			position: fixed;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			width: auto;
			color:black;
			font-size:20px;
			max-width: 80%; /* İstediğiniz maksimum genişlik */
			background-color: #ffffff;
			border: 1px solid #ccc;
			padding: 20px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
			z-index: 1000;
			text-align: center; /* İçerik ortalanacak */
		}
	</style>
</head>

<h3>Yeni Rezervasyon Sayfası</h3>

<form method="post">
	<div class="form-group">
		<label>Lokasyon</label>
		 @Html.DropDownListFor(x => x.DestinationID, (List<SelectListItem>)ViewBag.cities, new { @class = "form-select" }) 
	</div>

	<div class="form-group">
		<label>Kişi Sayısı</label>
		<input type="text" class="form-control" asp-for="@Model.PersonCount" />
	</div>

	<div class="form-group">
		<label>Tarih</label>
		<input type="date" class="form-control" asp-for="@Model.ReservationDate" />
	</div>

	<div class="form-group">
		<label>Mesajınız</label>
		<textarea asp-for="@Model.Description" rows="6" cols="4" placeholder="Mesajınız" class="form-control"></textarea>
	</div>
	<button class="btn btn-outline-info" type="submit">Kaydet</button>
</form>
<div class="popup" style="display:none" id="popup">
	<div class="row">
		<div class="offset-md-3 col-md-6">
			<span>Rezervasyonunuz onaylanma sürecine alınacaktır. Lütfen onay süreci ile ilgil menüden rezervasyonuzu takip ediniz</span>
		</div>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
	$(document).ready(function () {
		show();
	});

	function show() {
		$("#popup").show();
		setTimeout(function () {
			$("#popup").css('display', 'none');
		}, 5000);
	}
</script>